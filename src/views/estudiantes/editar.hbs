<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar estudiante</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/estudiantes/editar/{{estudiante.idestudiante}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="nombre" value="{{estudiante.nombre}}"
                        placeholder="Nombre del estudiante" autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="apellido" value="{{estudiante.apellido}}"
                        placeholder="Apellido del estudiante" />
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="{{estudiante.email}}"
                        placeholder="Correo del estudiante" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="idcarrera" value="{{estudiante.idcarrera}}"
                        placeholder="ID Carrera" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="usuario" value="{{estudiante.usuario}}"
                        placeholder="Usuario del estudiante" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>