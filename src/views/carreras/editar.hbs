<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/carreras/editar/{{carrera.idcarrera}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="carrera" value="{{carrera.carrera}}"
                        placeholder="Nombre de la carrera" autofocus />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>